{
  "version": "0.1.15",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && yarn build-tailwind",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build && husky install",
    "make-pretty": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./dist/tailwind.css --minify"
  },
  "peerDependencies": {
    "next": ">=9.0.0",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "matomo-optout-nextjs",
  "author": "Gaylord Julien",
  "module": "dist/matomo-opt-out-nextjs.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaylord-julien/matomo-optout-nextjs.git"
  },
  "description": "Opt out of Matomo tracking for Next.js",
  "keywords": [
    "matomo",
    "optout",
    "nextjs"
  ],
  "size-limit": [
    {
      "path": "dist/matomo-opt-out-nextjs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/matomo-opt-out-nextjs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "husky": "^8.0.1",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.0.1",
    "tailwindcss": "^3.1.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.10.1",
    "react-cookie": "^4.1.1"
  }
}
